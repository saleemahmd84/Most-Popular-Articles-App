<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saleem.mostpopular">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_storm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_storm"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.saleem.mostpopular.activities.MostPopularHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.saleem.mostpopular.activities.MostPopularDetailsActivity"></activity>

        <receiver android:name="com.example.saleem.mostpopular.services.NotificationReceiver"></receiver>
    </application>

</manifest>